@using shopthethao.Models
@{
    ViewBag.Title = "Category";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Loại sản phẩm <small>Danh sách loại sản phẩm</small></h3>
            </div>
            <!-- <div class="title_right">
            </div> -->
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <button type="button" class="btn btn-round btn-primary" data-toggle="modal" data-target="#ModalAddCate">Thêm mới</button>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Mã loại</th>
                                    <th>Tên loại</th>
                                    <th style="width: 105px;">Thao tác</th>
                                </tr>
                            </thead>

                            <tbody>
                            @foreach (var item in Model as List<LoaiSanPham>)
                            {
                                <tr>
                                    <td>@item.MaLoaiSanPham</td>
                                    <td>@item.MaLoai</td>
                                    <td>@item.TenLoaiSanPham</td>
                                    <td>
                                        <a href="@Url.Action("Change","Category", new { ID = @item.MaLoaiSanPham })" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> Sửa </a>
                                        <a href="@Url.Action("Delete","Category", new { ID = @item.MaLoaiSanPham })" class="btn btn-danger btn-xs" data-toggle="tooltip" title="Đã chắc chắn chưa"><i class="fa fa-trash-o"></i> Xóa </a>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /page content -->



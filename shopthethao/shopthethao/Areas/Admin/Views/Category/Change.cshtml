@model shopthethao.Models.LoaiSanPham

@{
    ViewBag.Title = "Change";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Sửa loại sản phẩm</h3>
            </div>
            <!-- <div class="title_right">
            </div> -->
        </div>
        <div class="clearfix"></div>
        <div class="row" style="padding-top:20px;">
            <form data-toggle="validator" role="form" action="@Url.Action("ChangeForm", "Category")" method="post">
                <div class="form-group col-md-12">
                    <div class="form-group">
                        <div class="col-md-2"></div>
                        <input type="hidden" value="@Model.MaLoaiSanPham" name="id"/>
                        <label class="control-label col-md-1">Mã loại</label>
                        <div class="col-md-3">
                            <input class="form-control" type="text" name="idCate" placeholder="Mã loại sản phẩm" value="@Model.MaLoai" required/>
                            <div class="help-block with-errors"></div>
                        </div>
                        <label class="control-label col-md-1">Tên loại</label>
                        <div class="col-md-3">
                            <input class="form-control" name="name" type="text" placeholder="Tên loại sản phẩm" value="@Model.TenLoaiSanPham" required/>
                            <div class="help-block with-errors"></div>
                        </div>
                        <div class="col-md-1">
                            <button type="submit" class="btn btn-primary">Sửa</button>
                        </div>
                    </div>
                </div>
                </form>
        </div>
    </div>
</div>


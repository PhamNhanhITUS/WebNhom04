<!-- Modal thêm người dùng-->
<div class="modal fade docs-cropped in" id="ModalAddAdmin" tabindex="-1" role="dialog" aria-labelledby="getCroppedCanvasTitle" aria-hidden="true">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="getCroppedCanvasTitle">Thêm tài khoản nhân viên</h4>
            </div>
            <form data-toggle="validator" role="form" action="@Url.Action("Add", "User")" method="post">
                <div class="modal-body">
                    <div class="col-sm-12">
                        <p style="color:red;">@if (Session["KTThemTaiKhoan"] != null)
                        { @Session["KTThemTaiKhoan"];
                        }</p>
                    </div>
                    <div class="form-group row" style="padding:0px 10px;margin-bottom:0px;">
                        <label for="example-text-input" class="col-2 col-form-label">Họ tên</label>
                        <div class="col-10">
                            <input class="form-control" name="name" type="text" placeholder="Họ tên" required>
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>
                    <div class="form-group row" style="padding:0px 10px;margin-bottom:0px;">
                        <label for="example-text-input" class="col-2 col-form-label">Tên đăng nhập</label>
                        <div class="col-10">
                            <input class="form-control" name="username" type="text" placeholder="Tên đăng nhập" required>
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>
                    <div class="form-group row" style="padding:0px 10px;margin-bottom:0px;">
                        <label for="example-text-input" class="col-2 col-form-label">Mật khẩu (Lớn hơn 8 kí tự)</label>
                        <div class="col-10">
                            <input class="form-control" name="password" type="text" placeholder="Mật khẩu" required>
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>
                    <div class="form-group row" style="padding:0px 10px;margin-bottom:0px;">
                        <label for="example-text-input" class="col-2 col-form-label">Email</label>
                        <div class="col-10">
                            <input class="form-control" name="email" type="text" placeholder="Email" required>
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>
                    <div class="form-group row" style="padding:0px 10px;margin-bottom:0px;">
                        <label for="example-text-input" class="col-2 col-form-label">Loại tài khoản</label>
                        <div class="col-10">
                            <select class="form-control" name="usergroup" style="width:100px;height:30px;">
                                <option value="1">Admin</option>
                                <option value="2">SEO</option>
                                <option value="3">Sale</option>
                            </select>
                        </div>
                    </div>
                </div>
                <!-- /.box -->
                <div class="modal-footer">
                    <button type="submit" class="btn btn-default">Thêm</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- /modal thêm người dùng -->

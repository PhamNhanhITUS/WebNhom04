if (Session["ThemLoaiSPThanhCong"] != null)
{
    <script>
        $('#ModalNotiCate').modal('show')
    </script>
}
    if (Session["TrungLoaiSP"] != null)
    {
        <script>
        $('#ModalNotiErrCate').modal('show')
        </script>
    }
    if (Session["TrungHSX"] != null)
    {
        <script>
        $('#ModalNotiErrManu').modal('show')
        </script>
    }
    if (Session["PhucHoiThanhCong"] != null)
    {
        <script>
        $('#ModalRestore').modal('show')
        </script>
    }
    if (Session["XoaThanhCong"] != null)
    {
        <script>
        $('#ModalDelete').modal('show')
        </script>
    }

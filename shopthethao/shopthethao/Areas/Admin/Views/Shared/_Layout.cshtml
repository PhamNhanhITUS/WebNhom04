    {
        <script>
        $('#ModalAddProduct').modal('show')
        </script>
    }
    if (Session["SuaSanPhamThanhCong"] != null)
    {
        <script>
        $('#ModalChangeProduct').modal('show')
        </script>
    }
    if (Session["DoiMatKhauAdminThanhCong"] != null)
    {
        <script>
        $('#ModalChangePass').modal('show')
        </script>
    }

    <script>
    $('#ModalNotiCate').on('hide.bs.modal', function (e) {
      @{
        Session.Remove("ThemLoaiSPThanhCong");
      }
    })
    $('#ModalNotiErrCate').on('hide.bs.modal', function (e) {
      @{
        Session.Remove("TrungLoaiSP");
       }
    })
    $('#ModalNotiErrManu').on('hide.bs.modal', function (e) {
      @{
        Session.Remove("TrungHSX");
       }
    })

     @{
         Session.Remove("XoaThanhCong");
     }
    })
    $('#ModalAddUser').on('hide.bs.modal', function (e) {
     @{
         Session.Remove("KTThemTaiKhoan");
     }
    })
    $('#ModalNotiUser').on('hide.bs.modal', function (e) {
     @{
         Session.Remove("ThemTaiKhoanThanhCong");

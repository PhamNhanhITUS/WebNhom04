<!-- Modal thêm hãng sản xuất-->
<div class="modal fade docs-cropped in" id="ModalAddManu" tabindex="-1" role="dialog" aria-labelledby="getCroppedCanvasTitle" aria-hidden="true">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="getCroppedCanvasTitle">Thêm hãng sản xuất</h4>
            </div>
            <form data-toggle="validator" role="form" action="@Url.Action("Add", "Manufacturer")" method="post" enctype = "multipart/form-data">
                <div class="modal-body">
                                <div class="form-group row" style="padding:0px 10px;margin-bottom:0px;">
                                    <label for="example-text-input" class="col-2 col-form-label">Mã hãng sản xuất</label>
                                    <div class="col-10">
                                        <input class="form-control" name="id" type="text" placeholder="Mã hãng sản xuất" required>
                                        <div class="help-block with-errors"></div>
                                    </div>
                                </div>
                                <div class="form-group row" style="padding:0px 10px;margin-bottom:0px;">
                                    <label for="example-text-input" class="col-2 col-form-label">Tên hãng sản xuất</label>
                                    <div class="col-10">
                                        <input class="form-control" name="name" type="text" placeholder="Tên hãng sản xuất" required>
                                        <div class="help-block with-errors"></div>
                                    </div>
                            </div>
                                <div class="form-group row" style="padding:0px 10px;margin-bottom:0px;">
                                    <label for="example-text-input" class="col-2 col-form-label">Logo hãng sản xuất</label>
                                    <div class="col-10">
                                        <input class="form-control" name="picture" type="file" placeholder="Tài khoản" required>
                                        <div class="help-block with-errors"></div>
                                    </div>
                                </div>
                </div>
                <!-- /.box -->
                <div class="modal-footer">
                    <button type="submit" class="btn btn-default">Thêm</button>
                </div>
            </form>
            </div>
        </div>
    </div>
<!-- /modal thêm hãng sản xuất -->


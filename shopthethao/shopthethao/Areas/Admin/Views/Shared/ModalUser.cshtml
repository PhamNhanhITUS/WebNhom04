@using shopthethao.Models
<!-- Modal thêm người dùng-->
<div class="modal fade docs-cropped in" id="ModalAddUser" tabindex="-1" role="dialog" aria-labelledby="getCroppedCanvasTitle" aria-hidden="true">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="getCroppedCanvasTitle">Thêm tài khoản</h4>
            </div>
            <form data-toggle="validator" role="form" action="@Url.Action("Add", "User")" method="post">
                <div class="modal-body">
                    <div class="col-sm-12">
                        <p style="color:red;">@if (Session["KTThemTaiKhoan"] != null){ @Session["KTThemTaiKhoan"];}</p>
                    </div>
                    <div class="form-group row" style="padding:0px 10px;margin-bottom:0px;">
                        <label for="example-text-input" class="col-2 col-form-label">Họ tên</label>
                        <div class="col-10">
                            <input class="form-control" name="name" type="text" placeholder="Họ tên" required>
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>
                    <div class="form-group row" style="padding:0px 10px;margin-bottom:0px;">
                        <label for="example-text-input" class="col-2 col-form-label">Tên đăng nhập</label>
                        <div class="col-10">
                            <input class="form-control" name="username" type="text" placeholder="Tên đăng nhập" required>
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>
                    <div class="form-group row" style="padding:0px 10px;margin-bottom:0px;">
                        <label for="example-text-input" class="col-2 col-form-label">Mật khẩu (Lớn hơn 8 kí tự)</label>
                        <div class="col-10">
                            <input class="form-control" name="password" type="password" placeholder="Mật khẩu" required>
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>
                    <div class="form-group row" style="padding:0px 10px;margin-bottom:0px;">
                        <label for="example-text-input"  class="col-2 col-form-label">Email</label>
                        <div class="col-10">
                            <input class="form-control" name="email" type="text" placeholder="Email" required>
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>
                    <div class="form-group row" style="padding:0px 10px;margin-bottom:0px;">
                        <label for="example-text-input" class="col-2 col-form-label">Số điện thoại</label>
                        <div class="col-10">
                            <input class="form-control" name="phone" type="text" placeholder="Số điện thoại" required>
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>
                    <div class="form-group row" style="padding:0px 10px;margin-bottom:0px;">
                        <label for="example-text-input" class="col-2 col-form-label">Loại tài khoản</label>
                        <div class="col-10">
                            <select class="form-control" name="usergroup" style="width:100px;height:30px;">
                                <option value="1">Thường</option>
                                <option value="2">VIP</option>
                                <option value="3">VVIP</option>
                            </select>
                        </div>
                    </div>
                </div>
                <!-- /.box -->
                <div class="modal-footer">
                    <button type="submit" class="btn btn-default">Thêm</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- /modal thêm người dùng -->

<!-- Modal thông báo thêm người dùng thành công-->
<div class="modal fade docs-cropped in" id="ModalNotiUser" tabindex="-1" role="dialog" aria-labelledby="getCroppedCanvasTitle" aria-hidden="true">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content" style="width:400px;">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="getCroppedCanvasTitle">Thêm tài khoản</h4>
            </div>
            <div class="modal-body">
                <div style="padding:5px 0px;">
                    <img src="~/Assets/Client/images/home/success.png" />
                    <label style="padding-left:15px;font-size:18px;">Thêm tài khoản thành công!</label>
                </div>
                <!-- /.box -->
                <div class="modal-footer" style="border-top:0px; padding:15px 0px 0px 0px;">
                    <button data-dismiss="modal" class="btn btn-primary">Thoát</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /modal thông báo thêm người dùng thành công-->


        });

        //swal("Good", "Thành công", "success");
    }
    function OnErrorCall_(repo) {
        swal("Error", "Lỗi không kết nối Sever", "error");
    }
    $.ajax({
        url: "@Url.Action("thongKeDoanhThu")",

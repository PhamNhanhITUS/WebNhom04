@using shopthethao.Models
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Đơn đặt hàng <small>Danh sách đơn đặt hàng</small></h3>
            </div>
            <!-- <div class="title_right">
            </div> -->
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Mã</th>
                                    <th>Ngày lập</th>
                                    <th>Khách hàng</th>
                                    <th>Tổng tiền</th>
                                    <th>Trạng thái</th>
                                    <th style="width: 165px;">Thao tác</th>
                                </tr>
                            </thead>

                            <tbody>
                            @foreach (var item in Model as List<DonDatHang>)
                            {
                                <tr>
                                    <td>@item.MaDonDatHang</td>
                                    <td>@item.NgayLap</td>
                                    <td>@item.TaiKhoan.TenHienThi</td>
                                    <td>@item.TongThanhTien</td>

                                    @if(item.TinhTrang.MaTinhTrang == 1){
                                         <td><a href="@Url.Action("Change","Oder", new { ID = item.MaDonDatHang })" class="btn btn-danger btn-xs">@item.TinhTrang.TenTinhTrang </a></td>
                                    }
                                    else if (item.TinhTrang.MaTinhTrang == 2)
                                    {
                                        <td><a href="@Url.Action("Change","Oder", new { ID = item.MaDonDatHang })" class="btn btn-warning btn-xs">@item.TinhTrang.TenTinhTrang </a></td>
                                    }
                                    else
                                    {
                                        <td><button type="button" class="btn btn-success btn-xs">@item.TinhTrang.TenTinhTrang</button></td>
                                    }

                                    <td>
                                        <a href="@Url.Action("Detail","Oder", new { ID = item.MaDonDatHang })" class="btn btn-primary btn-xs"><i class="fa fa-eye"></i> Xem </a>
                                        <a href="@Url.Action("Delete","Oder", new { ID = item.MaDonDatHang })" class="btn btn-danger btn-xs" data-toggle="tooltip" title="Đã chắc chắn chưa"><i class="fa fa-trash-o"></i> Xóa </a>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /page content -->

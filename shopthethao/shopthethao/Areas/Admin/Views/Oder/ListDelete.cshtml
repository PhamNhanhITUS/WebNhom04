@using shopthethao.Models
@{
    ViewBag.Title = "ListDelete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Bị xóa <small>Danh sách đơn hàng bị xóa</small></h3>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <div class="clearfix"></div>
                    </div>

                    <div class="x_content">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Mã</th>
                                    <th>Ngày lập</th>
                                    <th>Khách hàng</th>
                                    <th>Tổng tiền</th>
                                    <th>Trạng thái</th>
                                    <th style="width: 115px;">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model as List<DonDatHang>)
                                {
                                    <tr>
                                        <td>@item.MaDonDatHang</td>
                                        <td>@item.NgayLap</td>
                                        <td>@item.TaiKhoan.TenHienThi</td>
                                        <td>@item.TongThanhTien</td>

                                        @if (item.TinhTrang.MaTinhTrang == 1)
                                        {
                                            <td><button type="button" class="btn btn-danger btn-xs">@item.TinhTrang.TenTinhTrang</button></td>
                                        }
                                        else if (item.TinhTrang.MaTinhTrang == 2)
                                        {
                                            <td><button type="button" class="btn btn-warning btn-xs">@item.TinhTrang.TenTinhTrang</button></td>
                                        }
                                        else
                                        {
                                            <td><button type="button" class="btn btn-success btn-xs">@item.TinhTrang.TenTinhTrang</button></td>
                                        }

                                        <td>
                                            <a href="@Url.Action("RestoreOder", "Oder", new { ID = @item.MaDonDatHang })" class="btn btn-info btn-xs" data-toggle="tooltip" title="Phục hồi"><i class="fa fa-pencil"></i> Phục hồi </a>
                                            <a href="@Url.Action("DeleteOder", "Oder", new { ID = @item.MaDonDatHang})" class="btn btn-danger btn-xs" data-toggle="tooltip" title="Khi xóa sẽ mất vĩnh viễn"><i class="fa fa-trash-o"></i> Xóa </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /page content -->

@model shopthethao.Models.DonDatHang
@using shopthethao.Models
@{
    ViewBag.Title = "Change";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Sửa đơn hàng</h3>
            </div>
            <!-- <div class="title_right">
            </div> -->
        </div>
        <div class="clearfix"></div>
        <div class="row" style="padding-top:20px;">
            <div class="form-group col-md-12" style="padding:0px 10px;margin-bottom:0px;">
                <div class="form-group">
                    <div class="col-md-2"></div>
                    <label class="control-label col-md-2">Tình trạng đơn hàng</label>
                    <form data-toggle="validator" role="form" action="@Url.Action("ChangeForm", "Oder")" method="post">
                        <input type="hidden" value="@Model.MaDonDatHang" name="id" />
                        <div class="col-md-3">
                            <select class="select2_single form-control" tabindex="-1" name="admingroup">
                                <option selected disabled>@Model.TinhTrang.TenTinhTrang</option>
                                @if (ViewBag.Status != null)
                                {

                                    foreach (var item in ViewBag.Status as List<TinhTrang>)
                                    {
                                        <option value="@item.MaTinhTrang">@item.TenTinhTrang</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-3">
                            <button type="submit" class="btn btn-primary">Sửa</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>




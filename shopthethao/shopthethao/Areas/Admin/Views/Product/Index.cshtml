@using shopthethao.Models
@{
    ViewBag.Title = "Product";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Sản phẩm <small>Danh sách sản phẩm</small></h3>
            </div>
            <!-- <div class="title_right">
            </div> -->
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <button type="button" onclick="location.href='@Url.Action("AddProduct","Product")'" class="btn btn-round btn-primary">Thêm mới</button>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Mã</th>
                                    <th>Hình</th>
                                    <th>Tên</th>
                                    <th>Loại</th>
                                    <th>HSX</th>
                                    <th>Tình trạng</th>
                                    <th>Trạng thái</th>
                                    <th style="width: 105px;">Thao tác</th>
                                </tr>
                            </thead>

                            <tbody>
                            @foreach (var item in Model as List<SanPham>)
                            {
                                <tr>
                                    <td>@item.MaSP</td>
                                    <td>
                                        <div style="width:100px;height:100px;">
                                            <img src="~/Assets/Product/@item.MaSP/@item.URLAnhDaiDien" style="max-height:100%;max-width:100%;" />
                                        </div>
                                        
                                    </td>
                                    <td>@item.TenSanPham</td>
                                    <td>@item.LoaiSanPham.TenLoaiSanPham</td>
                                    <td>@item.HangSanXuat.TenHangSanXuat</td>
                                    <td>@item.KhuyenMaiSanPham.TenKhuyenMai</td>
                                    @if (item.TrangThai == true)
                                    {
                                        <td><button type="button" class="btn btn-success btn-xs">Còn hàng</button></td>
                                    }
                                    else
                                    {
                                        <td><button type="button" class="btn btn-warning btn-xs">Hết hàng</button></td>
                                    }
                                    <td>
                                        <a href="@Url.Action("Change","Product", new { ID = item.MaSanPham })" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> Sửa </a>
                                        <a href="@Url.Action("Delete","Product", new { ID = item.MaSanPham })" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Xóa </a>
                                    </td>
                                </tr>  
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /page content -->



@using shopthethao.Models
@{
    ViewBag.Title = "Picture";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                @{ var name = ViewBag.NameProduct;
                    var id = ViewBag.IDProduct;
                    var idPro = ViewBag.ID;}
                <h3>Hình ảnh <small>@name</small></h3>
            </div>
            <!-- <div class="title_right">
            </div> -->
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <form data-toggle="validator" role="form" action="@Url.Action("AddPicture", "Product")" method="post" enctype="multipart/form-data">
                            <div class="col-md-12">
                                <input type="hidden" name="id" value="@id"/>
                                <input type="hidden" name="idPro" value="@idPro" />
                                <div class="col-md-3">
                                    <input type="file" name="picture" class="form-control" />
                                </div>
                                <div class="col-md-9">
                                    <button type="submit" class="btn btn-round btn-primary" data-toggle="modal" data-target="#ModalAddPicture">Thêm mới</button>
                                </div>
                            </div>
                        </form>
                            <div class="clearfix"></div>
                        </div>
                    <div class="x_content">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Ảnh</th>
                                    <th>Mã sản phẩm</th>
                                    <th>Tên sản phẩm</th>
                                    <th style="width: 105px;">Thao tác</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model as List<HinhAnh>)
                                {
                                    <tr>
                                        <td>@item.MaHinhAnh</td>
                                        <td>
                                            <div style="width:200px; height:200px;">
                                                <img src="~/Assets/Product/@item.SanPham.MaSP/@item.URL" style="max-height:100%;max-width:100%;"/> 
                                            </div>
                                            
                                        </td>
                                        <td>@item.SanPham.MaSP</td>
                                        <td>@item.SanPham.TenSanPham</td>
                                        <td>
                                            <a href="@Url.Action("DeletePicture","Product", new { ID = item.MaHinhAnh, idPro = item.SanPham.MaSanPham })" class="btn btn-danger btn-xs" data-toggle="tooltip" title="Đã chắc chắn chưa"><i class="fa fa-trash-o"></i> Xóa </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /page content -->


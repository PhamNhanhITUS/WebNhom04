<div class="container-fluid">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-list"></i> Danh sách đơn đặt hàng</h3>
        </div>
        <div class="panel-body">
            <div class="well">
                <div class="row">
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label class="control-label" for="input-name">Mã đơn hàng</label>
                            <input type="text" name="filter_name" value="" placeholder="Mã đơn hàng" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="input-model">Tên sản phẩm</label>
                            <input type="text" name="filter_name" value="" placeholder="Tên sản phẩm" class="form-control" />
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label class="control-label" for="input-price">Mã khách hàng</label>
                            <input type="text" name="filter_price" value="" placeholder="Mã khách hàng" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="input-quantity">Ngày đặt hàng</label>
                            <input type="date" value="" class="form-control" />
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label class="control-label" for="input-status">Mã sản phẩm</label>
                            <input type="text" name="filter_quantity" value="" placeholder="Mã sản phẩm" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="input-quantity">Trạng thái</label>
                            <select name="filter_status" class="form-control">
                                <option value="*"></option>
                                <option value="1">Đã giao hàng</option>
                                <option value="0">Chưa giao hàng</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <button type="button" id="button-filter" class="btn btn-primary pull-right"><i class="fa fa-search"></i> Tìm kiếm</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Main content -->
    <div class="col-xs-12">
        <div class="box">

            <div class="box-body">
                <table id="example2" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th width="5%">ID</th>

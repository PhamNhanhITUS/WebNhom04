                            <th>Tên khách hàng</th>
                            <th>Ngày đặt</th>
                            <th>Số lượng</th>
                            <th>Tổng tiền</th>
                            <th style="/*width: 100px;*/">Trạng thái</th>
                            <th width="15%">Thao tác</th>
                        </tr>
                    </thead>
